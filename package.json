{
  "name": "@continua-ai/happy-paths",
  "version": "0.1.0",
  "description": "Trace-driven learning loop for coding agents: capture, index, mine wrong turns, and share happy paths.",
  "license": "Apache-2.0",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": ["dist", "README.md", "LICENSE"],
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "bun@1.2.22",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "clean": "rm -rf dist",
    "format": "biome format --write .",
    "guardrails": "node scripts/check-large-source-files.mjs",
    "lint": "biome check .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:wrong-turn-gate": "vitest run tests/wrong-turn-dataset.test.ts",
    "eval:wrong-turn": "tsc -p tsconfig.build.json && node scripts/run-wrong-turn-eval.mjs --strict",
    "eval:feasibility": "tsc -p tsconfig.build.json && node scripts/run-feasibility-gate.mjs --strict",
    "typecheck": "tsc --noEmit",
    "verify": "biome check . && tsc --noEmit && vitest run",
    "verify:ci": "biome check . && tsc --noEmit && vitest run && node scripts/check-large-source-files.mjs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/continua-ai/happy-paths.git"
  },
  "bugs": {
    "url": "https://github.com/continua-ai/happy-paths/issues"
  },
  "homepage": "https://github.com/continua-ai/happy-paths#readme",
  "keywords": ["agent", "llm", "retrieval", "trace", "pi", "continua"],
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^24.3.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
