{
  "name": "@continua-ai/happy-paths",
  "version": "0.1.0",
  "description": "Trace-driven learning loop for coding agents: capture, index, mine wrong turns, and share happy paths.",
  "license": "Apache-2.0",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": ["dist", "README.md", "LICENSE"],
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "bun@1.2.22",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "clean": "rm -rf dist",
    "format": "biome format --write .",
    "guardrails": "tsx scripts/check-large-source-files.ts",
    "lint": "biome check .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:wrong-turn-gate": "vitest run tests/wrong-turn-dataset.test.ts",
    "eval:wrong-turn": "tsc -p tsconfig.build.json && tsx scripts/run-wrong-turn-eval.ts --strict",
    "eval:feasibility": "tsc -p tsconfig.build.json && tsx scripts/run-feasibility-gate.ts --strict",
    "eval:skateboard": "tsc -p tsconfig.build.json && tsx scripts/run-feasibility-gate.ts --strict --bootstrap-samples 4000 --confidence-level 0.95",
    "eval:observed-ab": "tsc -p tsconfig.build.json && tsx scripts/run-observed-ab-gate.ts --strict",
    "eval:observed-ab:long-horizon": "tsc -p tsconfig.build.json && tsx scripts/run-observed-ab-long-horizon.ts --strict",
    "eval:trajectory-outcome:long-horizon": "tsc -p tsconfig.build.json && tsx scripts/run-trajectory-outcome-long-horizon.ts --strict",
    "build:feasibility-dataset": "tsc -p tsconfig.build.json && tsx scripts/build-feasibility-dataset-from-traces.ts",
    "memo:feasibility": "tsc -p tsconfig.build.json && tsx scripts/write-feasibility-memo.ts",
    "sync:evidence-web": "tsx scripts/publish-feasibility-evidence.ts",
    "typecheck": "tsc --noEmit",
    "verify": "biome check . && tsc --noEmit && vitest run",
    "verify:ci": "biome check . && tsc --noEmit && vitest run && tsx scripts/check-large-source-files.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/continua-ai/happy-paths.git"
  },
  "bugs": {
    "url": "https://github.com/continua-ai/happy-paths/issues"
  },
  "homepage": "https://github.com/continua-ai/happy-paths#readme",
  "keywords": ["agent", "llm", "retrieval", "trace", "pi", "continua"],
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^24.3.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
